---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Turso Test Page">
	<main>
		<div
			class="flex h-screen w-full flex-col items-center justify-center bg-indigo-950"
		>
			<h1 class="mb-4 text-4xl font-bold text-white">
				Turso w/ HTMX Inventory Database Example
			</h1>
			<div
				class="aspect-square h-1/2 w-2/3 rounded-lg bg-indigo-200 p-4 *:mb-2 *:rounded-lg *:bg-indigo-50 *:px-4 *:py-2"
				hx-get="/api/getlistastro"
				hx-trigger="load"
			>
				<!-- <img src="/public/loading_gear.svg" alt="Loading indicator shaped like a gear" class="htmx-indicator"> -->
				<!-- Ignore everything in this div, it's all for the silly loading indicator -->
				<div
					class="flex h-full w-full items-center justify-center !bg-indigo-200"
				>
					<div class="loadingio-spinner-gear-nq4q5u6dq7r">
						<div class="ldio-x2uulkbinbj">
							<div>
								<div></div>
								<div></div>
								<div></div>
								<div></div>
								<div > </div>
								<div></div>
							</div>
						</div>
					</div>
				</div>
				<style type="text/css">
					@keyframes ldio-x2uulkbinbj {
						0% {
							transform: rotate(0deg);
						}
						50% {
							transform: rotate(22.5deg);
						}
						100% {
							transform: rotate(45deg);
						}
					}
					.ldio-x2uulkbinbj > div {
						transform-origin: 100px 100px;
						animation: ldio-x2uulkbinbj 0.24213075060532688s
							infinite linear;
					}
					.ldio-x2uulkbinbj > div div {
						position: absolute;
						width: 22px;
						height: 152px;
						background: #59a1ff;
						left: 100px;
						top: 100px;
						transform: translate(-50%, -50%);
					}
					.ldio-x2uulkbinbj > div div:nth-child(1) {
						width: 120px;
						height: 120px;
						border-radius: 50%;
					}
					.ldio-x2uulkbinbj > div div:nth-child(6) {
						width: 80px;
						height: 80px;
						background: rgb(199 210 254 / var(--tw-bg-opacity));
						border-radius: 50%;
					}
					.ldio-x2uulkbinbj > div div:nth-child(3) {
						transform: translate(-50%, -50%) rotate(45deg);
					}
					.ldio-x2uulkbinbj > div div:nth-child(4) {
						transform: translate(-50%, -50%) rotate(90deg);
					}
					.ldio-x2uulkbinbj > div div:nth-child(5) {
						transform: translate(-50%, -50%) rotate(135deg);
					}
					.loadingio-spinner-gear-nq4q5u6dq7r {
						width: 200px;
						height: 200px;
						display: inline-block;
						overflow: hidden;
						background: none;
					}
					.ldio-x2uulkbinbj {
						width: 100%;
						height: 100%;
						position: relative;
						transform: translateZ(0) scale(1);
						backface-visibility: hidden;
						transform-origin: 0 0; /* see note above */
					}
					.ldio-x2uulkbinbj div {
						box-sizing: content-box;
					}
					/* [ldio] generated by https://loading.io */
				</style>
			</div>
		</div>
	</main>
</Layout>
